<?xml version="1.0" encoding="UTF-8"?>
<mod>
    <keymap>
        <action name="suicide">
            <arg name="subject" value="entity"/>
            <bind key="X"/>
        </action>
        <action name="fight">
            <arg name="subject" value="entity"/>
            <arg name="target" value="direction"/>
            <bind key="F"/>
        </action>
        <action name="eat-from-floor">
            <arg name="subject" value="entity"/>
            <bind key="e"/>
        </action>
        <action name="climb-down">
            <arg name="subject" value="entity"/>
            <bind key=">"/>
        </action>
        <action name="climb-up">
            <arg name="subject" value="entity"/>
            <bind key="&lt;"/>
        </action>
        <action name="drop">
            <arg name="subject" value="entity"/>
            <bind key="d"/>
        </action>
        <action name="wield">
            <arg name="subject" value="entity"/>
            <bind key="w"/>
        </action>
        <action name="pickup">
            <arg name="subject" value="entity"/>
            <bind key=","/>
        </action>
        <action name="wait">
            <arg name="subject" value="entity"/>
            <bind key="."/>
        </action>
    </keymap>
</mod>
